{
    "custom/home-center": {
        "format": "󰣇",
        "on-click": "$HOME/.config/eww/panel/launcher.sh"
    },

    "hyprland/workspaces": {
        "active-only": false,
        "persistent-workspaces": {
            "*": 5
        },
        "format": "{icon}",
        "format-icons": {
            "active": "󰮯",
            "default": ""
        }
    },
    

    "custom/notifications": {
        "format": "",
	"on-click": ""
    },

    "custom/music": {
        "format": "",
        "on-click": "$HOME/.config/eww/media-control/launch && sleep 0.1",
        "on-click-right": "playerctl play-pause"
    },

    "clock": {
        "format": "{:%H\n%M}",
        "timezone": "America/Argentina/Buenos_Aires"
    },
    
    "custom/power": {
        "format": "",
        "on-click": "eww open power-window && sleep 0.1"
    }
}
